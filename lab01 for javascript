var playerScores = [];

function addscore() {
    let playerScore1 = prompt('The score of you is?');
    var score1 =  parseInt (playerScore1);
    playerScores.push(score1) ;
    if (playerScores.length < 3);
    let playerScore2 = prompt('The score of you is?');
    var score2 =  parseInt (playerScore2);
    playerScores.push(score2) ;
}

addscore();
console.log(playerScores);
